<h1>Create Form</h1>

<form action='/figures' method="post">

  Name
  <input type='text' name="figure[name]" id="figure_name"/>
  <br>

  <h2>Titles</h2>
  <br>
  <%@titles.each do |title|%>
    <%=title.name%><input type='checkbox' name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>"><br>
  </input>
    <%end%>
  <br/>

  <h2>Create New Title:</h2>
  <br/>

  <input type="text" name="title[name]" id="title_name"/>
  <br/>

  <h2>Landmarks</h2>
  <br/>

  <%@landmarks.each do |landmark|%>
    <%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.id%>" value="<%=landmark.id%>"><br>
  </input>
  <%end%>
  <br>
  <h2>Create New Landmark:</h2>
  <br/>

  Name:
  <input type='text' name="landmark[name]" id="landmark_name"/>
  Year:
  <input type='text' name="landmark[year_completed]" id="landmark_year"/>


  <input type="submit" value="Create New Figure/Landmark"/>
</form>
